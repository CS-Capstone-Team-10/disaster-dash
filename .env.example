# Atlas Alert Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATA SOURCE CONFIGURATION
# =============================================================================

# Set to 'false' to use real API instead of mock data
# Default: true (uses mock data)
NEXT_PUBLIC_USE_MOCK=true

# Your API base URL (only needed when NEXT_PUBLIC_USE_MOCK=false)
# Example: https://api.atlasalert.com
# Default: /api
NEXT_PUBLIC_API_URL=

# =============================================================================
# OPTIONAL: ADDITIONAL CONFIGURATION
# =============================================================================

# Add any additional environment variables your API requires below
# Examples:
# NEXT_PUBLIC_API_KEY=your-api-key-here
# NEXT_PUBLIC_WS_URL=wss://your-websocket-url
