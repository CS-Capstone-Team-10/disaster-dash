# Atlas Alert Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATA SOURCE CONFIGURATION
# =============================================================================

# Set to 'false' to use real API instead of mock data
# Default: true (uses mock data)
NEXT_PUBLIC_USE_MOCK=true

# Your API base URL (only needed when NEXT_PUBLIC_USE_MOCK=false)
# Example: https://api.atlasalert.com
# Default: /api
NEXT_PUBLIC_API_URL=

# =============================================================================
# CHATBOT CONFIGURATION
# =============================================================================

# Set to 'false' to use real chatbot API instead of mock responses
# Default: true (uses mock chatbot)
NEXT_PUBLIC_USE_MOCK_CHATBOT=true

NEXT_PUBLIC_CHATBOT_API_URL=


